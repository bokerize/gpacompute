<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_marginLeft="@dimen/transcript_list_margin"
    android:layout_marginRight="@dimen/transcript_list_margin"
    android:layout_marginBottom="@dimen/transcript_list_margin"
    android:id="@+id/linearLayout"
    >


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:columnCount="10"
        android:rowCount="2"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:fitsSystemWindows="true"
        >

        <TextView
            android:id="@+id/tvCourseNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="Course No"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            />

        <TextView
            android:id="@+id/tvGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_columnSpan="4"
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:text="Grade"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            />

    </GridLayout>
</LinearLayout>